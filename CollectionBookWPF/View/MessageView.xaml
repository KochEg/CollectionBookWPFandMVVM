<Window x:Class="CollectionBookWPF.View.MessageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollectionBookWPF.View"
        mc:Ignorable="d" Background="BurlyWood"
        Title="Сообщение" ResizeMode="NoResize" Height="150" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="MessageTextView" Grid.Row="0" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"/>
        <Button Style="{DynamicResource ButtonStyle}" Grid.Row="1" Content="Ок" 
                Margin="5 5 5 15" Click="Button_Click"/>
    </Grid>
</Window>
